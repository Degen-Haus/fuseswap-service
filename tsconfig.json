{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@controllers/*": ["controllers/*"],
      "@constants/*": ["constants/*"],
      "@models/*": ["models/*"]
    }
  },
  "exclude": ["test"]
}
